{
  "name": "ferrum",
  "version": "0.1.0",
  "description": "Ferrum IDE - A high-performance code editor",
  "type": "module",
  "scripts": {
    "dev": "tauri dev",
    "build": "tauri build",
    "vite": "vite",
    "vite:build": "vite build",
    "vite:preview": "vite preview",
    "tauri": "tauri",
    "lint": "biome lint src",
    "lint:fix": "biome lint --write src",
    "format": "biome format --write src",
    "format:check": "biome format src",
    "typecheck": "tsc --noEmit",
    "check": "bun run typecheck && biome check src",
    "check:all": "bun run check && cargo clippy --workspace",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:all": "bun run test:run && bun run test:e2e",
    "rust:check": "cargo check --workspace",
    "rust:clippy": "cargo clippy --workspace -- -D warnings",
    "rust:test": "cargo test --workspace",
    "rust:fmt": "cargo fmt --all",
    "rust:fmt:check": "cargo fmt --all -- --check"
  },
  "license": "MIT",
  "dependencies": {
    "@solid-primitives/event-listener": "^2.3.3",
    "@solid-primitives/i18n": "^2.1.1",
    "@solid-primitives/keyboard": "^1.2.8",
    "@solid-primitives/resize-observer": "^2.0.26",
    "@solid-primitives/storage": "^4.2.1",
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-clipboard-manager": "^2",
    "@tauri-apps/plugin-dialog": "^2",
    "@tauri-apps/plugin-fs": "^2",
    "@tauri-apps/plugin-opener": "^2",
    "@tauri-apps/plugin-shell": "^2",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-web-links": "^0.11.0",
    "@xterm/xterm": "^5.5.0",
    "pixi.js": "^8.15.0",
    "solid-js": "^1.9.3",
    "solid-motionone": "^1.0.4"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.12",
    "@playwright/test": "^1.57.0",
    "@solidjs/testing-library": "^0.8.10",
    "@tailwindcss/vite": "^4.1.18",
    "@tauri-apps/cli": "^2",
    "@testing-library/jest-dom": "^6.9.1",
    "@types/node": "^22.10.0",
    "@vitest/coverage-v8": "^2.1.8",
    "jsdom": "^25.0.1",
    "playwright": "^1.57.0",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.6.2",
    "vite": "^6.0.3",
    "vite-plugin-solid": "^2.11.0",
    "vitest": "^2.1.8"
  }
}
